{
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "../../iso/en_win_srv_2003_r2_enterprise_x64_cd1.iso",
            "iso_checksum_type": "md5",
            "iso_checksum": "9674ef3b93d2522eb997bbb32aac288b",
            "headless": false,
            "boot_wait": "2m",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "2h",
            "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "guest_os_type": "Windows2003_64",
            "disk_size": 61440,
            "floppy_files": [
              "../../scripts/oracle-cert.cer"
            ],
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["storageattach", "{{.Name}}", "--storagectl", "Floppy Controller", "--port", "0", "--device", "0", "--type", "fdd", "--medium", "../../scripts/floppy/floppy01.img"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "remote_path": "/tmp/script.bat",
            "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
            "scripts": [
                "../../scripts/vm-guest-tools.bat",
                "../../scripts/vagrant-ssh.bat"
            ]
        }, 
        {
            "type": "shell", "inline": ["rm -rf /tmp/*"]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": false,
            "output": "windows_2003R2-serverenterprise-amd64_{{.Provider}}.box",
            "vagrantfile_template": "vagrantfile-windows_2003.template"
        }
    ]
}